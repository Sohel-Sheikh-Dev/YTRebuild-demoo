<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="270dp"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_short"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:elevation="2dp"
        android:layout_above="@+id/channel"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Evo Guns In Air Drops Video *FAKE* ðŸ˜±ðŸ”¥ || Fake Video EXPOSED ðŸ¤¬ #shorts #freefireshorts"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/channel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/demo_thumb"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/channelLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/appple_logo" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>